# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.md,*.md.gotmpl}]
max_line_length = 0
trim_trailing_whitespace = false

[{Makefile,*.sh}]
indent_size = 6
indent_style = tab
